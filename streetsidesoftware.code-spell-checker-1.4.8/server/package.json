{
  "name": "vscode-spell-checker-server",
  "description": "Spell Checker Server",
  "version": "1.3.4",
  "author": "Jason Dent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jason-Rev/vscode-spell-checker"
  },
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "comment-json": "^1.1.3",
    "cspell": "^1.10.4",
    "gensequence": "^2.1.1",
    "iconv-lite": "^0.4.19",
    "minimatch": "^3.0.4",
    "rxjs": "^5.4.3",
    "tsmerge": "^1.0.4",
    "vscode-jsonrpc": "^3.4.1",
    "vscode-languageserver": "^3.4.3",
    "vscode-uri": "^1.0.1",
    "xregexp": "^3.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/minimatch": "^2.0.29",
    "@types/mocha": "^2.2.43",
    "@types/node": "^6.0.89",
    "@types/xregexp": "^3.0",
    "chai": "^4.1.2",
    "lorem-ipsum": "^1.0.4",
    "mocha": "^3.5.3",
    "rimraf": "^2.6.2",
    "ts-node": "^3.2.0",
    "typescript": "^2.5.3"
  },
  "scripts": {
    "clean": "rimraf ../client/server && rimraf ./tools/out",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run compile",
    "clean-build": "npm run clean && npm run build",
    "compile": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc -p .",
    "watch": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc --watch -p .",
    "perf": "mocha --recursive ../client/server/perf",
    "tsc": "tsc -p .",
    "test2": "mocha --compilers ts:ts-node/register --recursive test/*.test.ts test/**/*.test.ts",
    "test-watch": "npm run build && mocha --compilers ts:ts-node/register --watch --recursive src/**/*.test.ts",
    "test": "mocha --recursive ../client/server/test"
  }
}
